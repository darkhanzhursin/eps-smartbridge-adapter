        <cxf-spring-boot-starter-jaxws>3.4.5</cxf-spring-boot-starter-jaxws>
        <lombok-mapstruct-binding.version>0.2.0</lombok-mapstruct-binding.version>
        <saaj-impl.version>1.3.28</saaj-impl.version>
        <kalkancrypt.version>0.7.2</kalkancrypt.version>
        <kalkancrypt_xmldsig.version>0.4</kalkancrypt_xmldsig.version>
